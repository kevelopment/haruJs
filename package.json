{
  "name": "harujs",
  "version": "0.0.1",
  "description": "Node.js Web-Framework based on Koa",
  "main": "index.js",
  "repository": "git@github.com:vudor/haruJs.git",
  "author": "Kevin Adam <kevinadam@gmx.de>",
  "scripts": {
    "start": "tsc -sourcemap && node build/index.js",
    "build-samples": "tsc -b ./samples/tsconfig.samples.json",
    "start-samples": "yarn build-samples && node build/samples/index.js",
    "clean": "rm -r ./build",
    "test": "jest",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-proposal-decorators": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@types/jest": "^26.0.20",
    "@types/koa": "^2.11.7",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.14.24",
    "@types/reflect-metadata": "^0.1.0",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^10.0.0",
    "node-dependency-injection": "^2.6.11",
    "reflect-metadata": "^0.1.12"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint . --fix"
    ]
  }
}
